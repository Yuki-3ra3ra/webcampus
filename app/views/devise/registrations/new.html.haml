#registration
  .webcampus
    .companyname
      Web Campus 会員登録
  .input-container
    .formspace
      .writing-area
        .title
          まずは1分で簡単登録
        .explanation
          登録後、マイページからプロフィールを作成できます。中学生以下の場合は保護者もしくはお支払する方が入力をお願い致します。

        .input-area
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!

          .field.row
            = f.label :メールアドレス
            = f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス"
          .field.row
            = f.label :パスワード
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} 文字以上)
            = f.password_field :password, autocomplete: "off", placeholder: "パスワード(6文字)"
          .field.row
            = f.label :"パスワード  (確認)"
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワード(確認)"

          /.field.row
          /  = f.label :"話を聞きたいです"
          /  = f.check_box :user_type, class: "user_type", value: 1
          /  = f.label :"教えます"
          /  = f.check_box :user_type, class: "user_type", value: 2




          .actions
            = f.label :"登録", class: "submitbtn"
            = f.submit "登録", class: "hide"
      //= render "devise/shared/links"

  %footer#footer
    = render "modules/footer"
