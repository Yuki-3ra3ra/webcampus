%form{"accept-charset" => "UTF-8", :action => "/obogs", :method => "get"}
  %input{name: "utf8", type: "hidden", value: "✓"}/
  .form_row
    %fieldset.field
      %legend.label
        %i
        = fa_icon 'university'
        %span{class: "schoolname"} 学校名
      %a.sp_label{href: "#fw"}
        %i
        = fa_icon 'university'
        %span{class: "schoolname"} 学校名
      .content
        %input#search_fw{name: "search[fw]", placeholder: "例）◯◯大学", type: "text"}/
