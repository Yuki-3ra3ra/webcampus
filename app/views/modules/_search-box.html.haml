          %label{for: "search_bid_6"} 外国語系
          %input#search_bid_7.custom_check{name: "search[bid][]", type: "checkbox", value: "7"}/
          %label{for: "search_bid_7"} 教育・福祉系
          %input#search_bid_8.custom_check{name: "search[bid][]", type: "checkbox", value: "8"}/
