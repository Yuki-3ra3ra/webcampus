          %input#search_bid_15.custom_check{name: "search[bid][]", type: "checkbox", value: "15"}/
          %label{for: "search_bid_15"} 教養・総合系
          %input#search_bid_16.custom_check{name: "search[bid][]", type: "checkbox", value: "16"}/

  .form_row
    %fieldset.field
      %legend.label
        %i
        = fa_icon 'pencil'
        %span{class: "admission_process"} 受験方式
      %a.sp_label{href: "#pid"}
        %i
        = fa_icon 'pencil'
        %span{class: "admission_process"} 受験方式
      .content
        .custom_check_box.normal
          %input#search_oid_1.custom_check{name: "search[oid][]", type: "checkbox", value: "1"}/
          %label{for: "search_oid_1"} 一般入試
          %input#search_oid_2.custom_check{name: "search[oid][]", type: "checkbox", value: "2"}/
